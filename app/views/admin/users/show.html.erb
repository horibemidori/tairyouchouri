<h1>ユーザー詳細</h1>
<div>
  <p>ユーザネーム：<%= @user.name %></p>
  <p>ユーザーニックネーム：<%= @user.nickname %></p>
  <%= link_to 'ユーザー削除', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
</div>



<h1>投稿一覧</h1>
<% @recipes.each do |recipe| %>
  <div>
   <%= link_to recipe_path(recipe.id) do %>
    <p>画像：<%= image_tag recipe.get_image %></p>
    <p>料理名：<%= recipe.title %></p>
    <p>材料：<%= recipe.body %></p>
    <p>作り方:<%= recipe.recipe %></p>
    <p><%= link_to "#{recipe.comments.count} コメント", recipe_path(recipe.id) %></p>
     
   <% end %>
  </div>
<% end %>
