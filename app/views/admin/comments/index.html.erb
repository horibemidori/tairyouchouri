<h1>コメント一覧</h1>
<% @comments.each do |comment| %>
 <div class="card" >
  <br><%= comment.user.nickname %>さん
  <br><%= comment.comment %>
  <br><%= comment.created_at.strftime('%Y/%m/%d') %>
  <p><%= link_to "コメント削除", admin_comment_path(comment), method: :delete, class:"btn btn-danger" %></p>
 </div>
<% end %>