<!DOCTYPE html>
<html>
<head>
  <title>Admin - Tiryouchouri</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/d9417e9e89.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white pt-5 pb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
         <a class="navar-brand" href="/">
          <span class=text-light><h1 >大量調理</h1></span>
          </a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if admin_signed_in? %>
             <li class="text-right">
              <%= link_to admin_comments_path, class: 'nav-link text-light' do %>
               <i class="fa-regular fa-comment"></i>コメント
              <% end %>
             </li> 
             <li class="text-right">
              <%= link_to admin_groups_path, class: 'nav-link text-light' do %>
               <i class="fa-solid fa-users-rectangle"></i>グループ
              <% end %>
             </li>
             <li class="text-right">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
               <i class="fa-solid fa-right-from-bracket"></i>ログアウト
              <% end %>
             </li>
            <% else %>
            
            </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
   
  
  <%= yield %>
</body>
</html>