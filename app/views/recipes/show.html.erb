
<h4>料理名</h4>
<p><%= @recipe.title %></p>

<h4>写真</h4>
<p><%= image_tag @recipe.get_image %></p>

<h4>材料</h4>
<p><%= @recipe.body %></p>

<h4>作り方</h4>
<p><%= @recipe.recipe %></p>

<h4>ユーザーネーム</h4>
<%= link_to user_path(@recipe.user.id) do %>
 <p><%= @recipe.user.name %></p>
<% end %>

<% if @recipe.user == current_user %>
 <%= link_to "編集", edit_recipe_path %>
 <%= link_to "削除", recipe_path(@recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<div>
  <p>コメント件数：<%= @recipe.comments.count %></p>
  <% @recipe.comments.each do |comment| %>
    
    <%= comment.user.nickname %>さん
    <br><%= comment.comment %>
    <br><%= comment.created_at.strftime('%Y/%m/%d') %>
    <% if comment.user == current_user %>
      <%= link_to "コメント削除", recipe_comment_path(comment.recipe, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@recipe, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>