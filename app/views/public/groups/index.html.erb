<h1>グループ新規作成</h1>
　<%= form_with model: @group do |f| %>
  <h4>グループ名</h4>
  <%= f.text_field :title %>
  <h4>紹介</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'グループを作成' %>
<% end %>
<h1>グループ一覧</h1>
<% @groups.each do |group| %>
 <p>グループ名：<%= group.title %></p>
 <p>紹介：<%= group.introduction %><p>
 <p>グループ作成者:<%= group.owner_id %></p>
 <P><%= link_to "詳細", group_path(group.id) %></P>


  <% if group.is_owned_by?(current_user) %>
    <%= link_to "編集", edit_group_path(group) %>
  <% end %>
<% end %>
