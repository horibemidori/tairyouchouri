<h1>レシピ一覧</h1>
 <% @recipes.each do |recipe| %>
   <%= link_to recipe_path(recipe.id), class: "text-dark" do %>
   <div class="card" >
    <div class="row">
     <div class="col-lg-4">
      <p><%= image_tag recipe.get_image %></p>
     </div>
    
     <div class="col-lg-8">
      <div class="card-body">
       <h5>料理名：<%= recipe.title %></h5>
       <p>材料：<%= recipe.body %><p>
       <p>作り方:<%= recipe.recipe %></p>
       <p><%= link_to "#{recipe.comments.count} コメント", recipe_path(recipe.id), class: "text-dark" %></p>
      </div>
     </div>
    </div>
   <% end %>
 <% end %>
